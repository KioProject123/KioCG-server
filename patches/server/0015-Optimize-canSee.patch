index 08649f51adb40fa69d45b95c2d13aa918fff41bf..6961d65a184d659b7d60c73aaddc120bd70457f4 100644
--- a/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
+++ b/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
@@ -1916,6 +1916,7 @@ public class CraftPlayer extends CraftHumanEntity implements Player {
 
     @Override
     public boolean canSee(org.bukkit.entity.Entity entity) {
+        if (this.hiddenEntities.isEmpty()) return true; // KioCG
         return this.canSee(entity.getUniqueId());
     }
 
